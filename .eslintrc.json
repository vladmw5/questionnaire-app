{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["react", "prettier"],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "no-magic-numbers": 1,
    "max-len": 0,
    "react/jsx-uses-react": 2,
    "react/react-in-jsx-scope": 0,
    "react/jsx-uses-vars": 2,
    "newline-after-var": 2,
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
